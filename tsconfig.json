{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "noImplicitAny": true,
      "rootDir": "./",
      "outDir": "build"
  },
  "include": [
    "**/*"
],
  "exclude": [
      ".idea",
      "build",
      "node_modules",
      "typings/globals",
      "typings/modules"
  ]
}
